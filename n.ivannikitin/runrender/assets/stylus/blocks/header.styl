.header
  height 781px
  background url(../images/bg-header.jpg) center center no-repeat

  &__top
    background rgba(255,255,255,.9)
    height 100px

  &__logo
    display block
    float left
    margin 17px 0 0

  &__phone
    float right
    margin 33px 0 0

    a.phone
      display block
      text-decoration none
      font-size 30px
      color #000037
      font-family 'Boblic'

  &__menu
    border-top 1px solid #ecdfdc
    background #e3d1c9
    height 48px

    &_fix
      position fixed
      left 0
      top 0
      width 100%

  &__title-block
    text-align center
    margin 90px 0 0

  &__title-top
  &__title-bottom
  &__title-desc
  &__interiors
  &__categories
    display inline-block
    background rgba(255,255,255,.8)
    font-family 'Boblic'

  &__title-top
  &__title-bottom
    padding 17px 20px 14px
    font-size 60px
    color #000037

  &__title-desc
    padding 3px 10px
    font-size 30px
    margin 0 auto

  &__interiors
    font-size 25px
    margin 125px 0 0
    padding 9px 17px 2px

  &__categories
    width 490px
    display block
    margin 0 auto
    padding 10px 20px

    li
      margin 0 34px 0 0
      font-size 20px

      &:last-child
        margin-right 0

  &__button
    margin-top 22px
    display block
